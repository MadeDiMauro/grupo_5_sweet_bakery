<!DOCTYPE html>
<%- include('../partials/head', { title: "Registrarse" , style: "register"}) %> 

  <body>
    <header>

      <%- include('../partials/header') %>

    </header>
    <main class="main-login">
      <!-- <div class="main-div-box"> -->
      <div class="principal-container">
        <div class="title-box">
          <p class="titlep">Registrarse</p>
        </div>
        <div class="mostrarFormulario">
          <ul class="errores">
          </ul>
        </div>
        <form action="/users/register" method="POST" enctype="multipart/form-data">
          <div class="input-box">
            <!-- <label class="input-box__label" for="name">Nombre</label> -->
            <input class="input" type="text" name="name" id="name" placeholder="Nombre"
              value="<%= locals.old ? old.name : null %>">
            <i class="login-icon fa-solid fa-user"></i>
            <% if(locals.errors && errors.name) { %>
              <div>
                <%= errors.name.msg %>
              </div>
              <% } %>
          </div>

          <div class="input-box">
            <!-- <label class="input-box__label" for="email">Correo Electrónico</label> -->
            <input class="input" type="email" name="email" id="email" placeholder="Email"
              value="<%= locals.old ? old.email : null %>">
            <i class="email-icon fa-solid fa-envelope"></i>
            <% if(locals.errors && errors.email) { %>
              <div>
                <%= errors.email.msg %>
              </div>
              <% } %>
          </div>

          <div class="input-box">
            <!-- <label class="input-box__label" for="phone">Teléfono</label><br> -->
            <input class="input" type="tel" name="phone" id="phone" placeholder="Teléfono"
              value="<%= locals.old ? old.phone : null %>">
            <i class="phone-icon fa-solid fa-phone"></i>
          </div>

          <div class="input-box">
            <!-- <label class="input-box__label" for="password">Contraseña</label><br> -->
            <input class="input" type="password" name="password" id="password" placeholder="Contraseña">
            <i class="pass-icon fa-solid fa-key"></i>
            <% if(locals.errors && errors.password) { %>
              <div>
                <%= errors.password.msg %>
              </div>
              <% } %>
          </div>

          <div class="input-box">
            <!-- <label class="input-box__label" for="re_password">Repetir Contraseña</label><br> -->
            <input class="input" type="password" name="re_password" id="re_password" placeholder="Repetir contraseña">
            <i class="pass-icon fa-solid fa-key"></i>
            <% if(locals.errors && errors.re_password) { %>
              <div>
                <%= errors.re_password.msg %>
              </div>
              <% } %>
          </div>

          <div class="box-avatar">
            <label class="box-avatar__label" for="avatar">Subir foto de perfil</label>
            <input class="box-avatar__input" type="file" name="avatar" id="avatar">
            <% if(locals.errors && errors.avatar) { %>
              <div>
                <%= errors.avatar.msg %>
              </div>
              <% } %>
          </div>

          <div class="box">
            <div class="checkbox-box">
              <div class="check">
                <input class="checkbox-input" type="checkbox" name="check" id="check">
                <label class="checkbox-label" for="check">No soy un robot</label>
              </div>
            </div>
          </div>

          <div class="submit-box">
            <a href="/" class="submit-label">
              <button class="submit-input" type="submit">Crear cuenta</button>
            </a>
          </div>

          <div class="final-a-box">
            <a class="final-a" href="/login">¿Ya tienes cuenta? Inicia sesión</a>
          </div>

        </form>
      </div>

    </main>
    <footer>
      <%- include('../partials/footer') %>

    </footer>
    <script src="/js/validations/register.js"></script>
  </body>