<!DOCTYPE html>
<%- include('../partials/head', { title: "Registrarse" , style: "register" }) %>

  <body>
    <header>

      <%- include('../partials/header') %>

    </header>
    <main class="main-login">
      <div class="main-div-box">
        <p class="titlep">REGISTRARSE</p>
        <form action="/users/register" method="POST" enctype="multipart/form-data">
          <div class="input-box">
            <label class="input-box__label" for="name">Nombre</label><br>
            <input class="input" type="text" name="name" id="name" value= "<%= locals.old ? old.name : null %>">
            <% if(locals.errors && errors.name) { %>
              <div>
                <%= errors.name.msg %>
              </div>
              <% } %>
          </div>
          <div class="input-box">
            <label class="input-box__label" for="email">Correo Electrónico</label><br>
            <input class="input" type="email" name="email" id="email" value= "<%= locals.old ? old.email : null %>">
            <% if(locals.errors && errors.email) { %>
              <div>
                <%= errors.email.msg %>
              </div>
              <% } %>
          </div class="input-box">
          <div class="input-box">
            <label class="input-box__label" for="phone">Teléfono</label><br>
            <input class="input" type="tel" name="phone" id="phone" value= "<%= locals.old ? old.phone : null %>">
          </div>
          <div class="input-box">
            <label class="input-box__label" for="password">Contraseña</label><br>
            <input class="input" type="password" name="password" id="password">
            <% if(locals.errors && errors.password) { %>
              <div>
                <%= errors.password.msg %>
              </div>
              <% } %>
          </div>
          <div class="input-box">
            <label class="input-box__label" for="re_password">Repetir Contraseña</label><br>
            <input class="input" type="password" name="re_password" id="re_password">
            <% if(locals.errors && errors.re_password) { %>
              <div>
                <%= errors.re_password.msg %>
              </div>
              <% } %>
          </div>
          <div class="input-box">
            <label class="input-box__label" for="avatar">Foto de perfil</label><br>
            <input class="input" type="file" name="avatar" id="avatar" >
            <% if(locals.errors && errors.avatar) { %>
              <div>
                <%= errors.avatar.msg %>
              </div>
              <% } %>
          </div>
          <div class="checkbox-box">
            <label class="checkbox-label" for="check">
              <input class="checkbox-input" type="checkbox" name="check" id="check">
              No soy un robot</label>
          </div>
          <div class="submit-box">
            <a href="/" class="submit-label">
              <button class="submit-input" type="submit">CREA TU CUENTA</button></a>
            <!--   <a class="products__a" href="/cart1">
              <button class="products__button-add" type="submit">
                  AGREGAR <i class="pruducts__icon-cart fas fa-cart-plus"></i>
              </button>
          </a> -->
          </div>
          <div class="final-a-box">
            <a class="final-a" href="/login">¿Ya tienes cuenta? Inicia sesión</a>
          </div>
        </form>
      </div>

    </main>
    <footer>
      <%- include('../partials/footer') %>

    </footer>
  </body>