<!DOCTYPE html>
<%- include('../partials/head', { title: "Iniciar sesión" , style: "login" }) %>

  <body>
    <header>

      <%- include('../partials/header') %>

    </header>
    <main class="main-login">
      <div class="main-div-box">
        <p class="titlep">INICIAR SESION</p>
        <form method="POST" action="/users/login">
          <div class="input-box">
            <label for="email">Usuario</label><br>
            <input class="input" type="email" name="email" id="email" value="<%= locals.old ? old.email : null %>">
            <% if (locals.errors && errors.email) { %>
              <div>
                <%= errors.email.msg %>
              </div>
              <% } %>
                <% if (locals.errors && errors.generico) { %>
                  <div>
                    <%= errors.generico.msg %>
                  </div>
                  <% } %>
          </div>

          <div class="input-box">
            <label for="password">Contraseña</label><br>
            <input class="input" type="password" name="password" id="password">
            <% if (locals.errors && errors.password) { %>
              <div>
                <%= errors.password.msg %>
              </div>
              <% } %>
                <% if (locals.errors && errors.generico) { %>
                  <div>
                    <%= errors.generico.msg %>
                  </div>
                  <% } %>
          </div>

          <div class="checkbox-box">
            <label class="checkbox-label" for="check_login">
              <input class="checkbox-input" type="checkbox" name="check_login" id="check_login">
              Recordarme</label>
          </div>
          <div class="forgotpass-box">
            <a class="forgotpass" href="">¿Olvidaste la contraseña?</a>
          </div>
          <div class="submit-box">
            <label class="submit-label" for=""></label>
            <button class="submit-input" type="submit">INICIAR SESION</button>
          </div>
          <div class="final-a-box">
            <div class="div-center">
              <a class="final-a" href="/users/register">
                <button type="button">REGISTRATE</button>
              </a>
            </div>
          </div>
        </form>
      </div>

    </main>
    <footer>
      <%- include('../partials/footer') %>

    </footer>
  </body>