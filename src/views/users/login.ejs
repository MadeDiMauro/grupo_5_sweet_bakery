<!DOCTYPE html>
<%- include('../partials/head', { title: "Iniciar sesión" , style: "login" }) %>

  <body>
    <header>

      <%- include('../partials/header') %>

    </header>
    <main class="main-login">
      <div class="main-div-box">
          <p class="titlep">INICIAR SESION</p>
        <form method="POST" action="/users/login">
          <div class="input-box">
            <label for="user">Usuario</label><br>
            <input class="input" type="text" name="user" id="user" >
            <% if (locals.errors && errors.user) { %>
           <div>
            <%= errors.user.msg %>
           </div>
           <% } %>
          </div>

          <div class="input-box">
            <label for="password_login">Contraseña</label><br>
            <input class="input" type="password" name="password_login" id="password_login" placeholder="">
            <% if (locals.errors && errors.password_login) { %>
              <div>
               <%= errors.password_login.msg %>
              </div>
              <% } %>
          </div>

          <div class="checkbox-box">
            <label class="checkbox-label" for="check_login">
              <input class="checkbox-input" type="checkbox" name="check_login" id="check_login" placeholder="">
              Recordarme</label>
          </div>
          <div class="forgotpass-box">
            <a class="forgotpass" href="">¿Olvidaste la contraseña?</a>
          </div>
          <div class="submit-box">
            <label class="submit-label" for=""></label>
            <button class="submit-input" type="submit">INICIAR SESION</button>
          </div>
          <div class="final-a-box">
            <div class="div-center">
              <a class="final-a" href="/register"><button>REGISTRATE</button></a>
            </div>
          </div>
        </form>
      </div>

    </main>
    <footer>
      <%- include('../partials/footer') %>

    </footer>
  </body>