<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Producto</title>
    <link rel="stylesheet" href="/css/adminEdit.css">
    <link rel="stylesheet" href="/css/base-style.css">
    <link href="https://fonts.googleapis.com/css2?family=Catamaran:wght@200;300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <script src="https://kit.fontawesome.com/12c225f38a.js" crossorigin="anonymous"></script>
</head>

<body>
    <main>
        <section class="admin">
            <%- include('../../partials/navbarAdmin') %>

            <div class="admin_container_edit">
                <div class="adminTitle_edit">
                    <p class="adminTitleEdit_p">EDITAR PRODUCTO</p>
                </div>

                <div class="newProduct_edit">
                    <form class="newProduct_form_edit" action="" method="GET">
                        <label class="newProduct_label_edit" for="name">Nombre</label>
                        <input class="newProduct_input_edit" type="text" name="name" id="name" required>

                        <label class="newProduct_label_edit" for="category">Categoría</label>
                        <select class="newProduct_select_edit" name="categories" required>
                            <option value="c1">Alfajores</option>
                            <option value="c2">Budines</option>
                            <option value="c3">Cookies</option>
                            <option value="c4">Desayunos y boxes</option>
                            <option value="c5">Mini postres</option>
                            <option value="c6">Macarons</option>
                            <option value="c7">Productos secos</option>
                            <option value="c8">Postres</option>
                        </select>

                        <label class="newProduct_label_edit" for="price">Precio</label>
                        <input class="newProduct_input_edit" type="text" name="price" id="price" required>

                        <label class="newProduct_label_edit" for="description">Descripción</label>
                        <input id="lastInput_edit" class="newProduct_input_edit" type="text" name="description" id="description">

                        <label class="newProduct_label-img_edit">Agregar imagen de producto</label>
                        <input class="newProduct_input-file_edit" type="file" name="imgProduct" accept=".jpg">

                        <div class="edit">
                            <a class="edit_a" href="#">
                                <button class="edit_button-clean" type="reset">EDITAR</button>
                            </a>
                            <a class="edit_a" href="#">
                                <button class="edit_button" type="delete">DELETE</button>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
</body>

</html>